<!DOCTYPE html>
<html lang="en">
@*<html xmlns="http://www.w3.org/1999/xhtml">*@
<head>
    <title>@ViewData["Title"] - AspNetNewsSite</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/styles/layout.css" type="text/css">
</head>
<body id="top">
    <div class="wrapper col0">
        <div id="topline">
            <p>Tel: xxxxx xxxxxxxxxx | Mail: info@domain.com</p>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Libero</a></li>
                <li><a asp-controller="Home" asp-action="Index">Maecenas</a></li>
                <li><a asp-controller="Home" asp-action="Index">Mauris</a></li>
                <li class="last"><a asp-controller="Home" asp-action="Index">Suspendisse</a></li>
            </ul>
            <br class="clear">
        </div>
    </div>
    <!-- ####################################################################################################### -->
    <div class="wrapper">
        <div id="header">
            <div class="fl_left">
                <h1><a asp-controller="Home" asp-action="Index"><strong>N</strong>ews <strong>M</strong>agazine</a></h1>
                <p>News Website</p>
            </div>
            <div class="fl_right"><a asp-controller="Home" asp-action="Index"><img src="~/images/demo/centre11.jpg" alt=""></a></div>
            <br class="clear">
        </div>
    </div>
    <!-- ####################################################################################################### -->
    <div class="wrapper col2">
        <div id="topbar">
            <div id="topnav">
                <ul>
                    <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Politics">Politics</a></li>
                    <li><a asp-controller="Home" asp-action="Technology">Technology</a></li>
                    <li>
                        <a href="#">Entertainment</a>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Sport">Sport</a></li>
                            <li><a asp-controller="Home" asp-action="Journeys">Journeys</a></li>
                            <li><a asp-controller="Home" asp-action="Games">Games</a></li>
                        </ul>
                    </li>
                    <li class="last"><a asp-controller="Home" asp-action="NewsEcology">Ecology</a></li>
                </ul>
            </div>
            <div id="search">
                <form action="#" method="post">
                    <fieldset>
                        <legend>Site Search</legend>
                        <input type="text" value="Search Our Website…" onfocus="this.value=(this.value=='Search Our Website…')? '' : this.value ;">
                        <input type="submit" name="go" id="go" value="Search">
                    </fieldset>
                </form>
            </div>
            <br class="clear">
        </div>
    </div>
    <!-- ####################################################################################################### -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- ####################################################################################################### -->
    <div class="wrapper">
        <div id="socialise">
            <ul>
                <li><a href="#"><img src="~/images/facebook.gif" alt=""><span>Facebook</span></a></li>
                <li><a href="#"><img src="~/images/rss.gif" alt=""><span>FeedBurner</span></a></li>
                <li class="last"><a href="#"><img src="~/images/twitter.gif" alt=""><span>Twitter</span></a></li>
            </ul>
            <div id="newsletter">
                <h2>NewsLetter Sign Up !</h2>
                <p>Please enter your Email and Name to join.</p>
                <form asp-action="Subscribe" asp-controller="Post" method="post">
                    <fieldset>
                        <legend>Digital Newsletter</legend>
                        <div class="fl_left">
                            <input required name="Name" type="text" value="Enter name here…" onfocus="this.value=(this.value=='Enter name here…')? '' : this.value ;">
                            <input required name="Email" type="text" value="Enter email address…" onfocus="this.value=(this.value=='Enter email address…')? '' : this.value ;">
                        </div>
                        <div class="fl_right">
                            <input type="submit" name="newsletter_go" id="newsletter_go" value="»">
                        </div>
                    </fieldset>
                </form>
                <p>To unsubsribe please <a asp-action="Unsubsribe" asp-controller="Post">click here »</a>.</p>
            </div>
            <br class="clear">
        </div>
    </div>
    <!-- ####################################################################################################### -->
    <div class="wrapper col8">
        <div id="copyright">
            <p class="fl_left">Copyright © 2014 - All Rights Reserved - <a href="#">Domain Name</a></p>
            <p class="fl_right">Template by <a target="_blank" href="http://www.os-templates.com/" title="Free Website Templates">OS Templates</a></p>
            <br class="clear">
        </div>
    </div>
    <script type="text/javascript" src="~/scripts/jquery.min.js"></script>
    <!-- Homepage Specific -->
    <script type="text/javascript" src="~/scripts/galleryviewthemes/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/scripts/galleryviewthemes/jquery.timers.1.2.js"></script>
    <script type="text/javascript" src="~/scripts/galleryviewthemes/jquery.galleryview.2.1.1.min.js"></script>
    <script type="text/javascript" src="~/scripts/galleryviewthemes/jquery.galleryview.setup.js"></script>
    <!-- / Homepage Specific -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
